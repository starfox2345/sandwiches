<%= render partial: "layouts/error", locals: { object: @sandwich } %>


<%= form_for(@sandwich) do |f| %>

    <%= f.label :ingredient %>
    <%= f.text_field :ingredient %><br>
    <%= f.label :price %>
    <%= f.number_field :price, step: 0.25 %><br>

    <h3>Enter a Category:</h3>
    <%= f.collection_select :category_id, Category.all, :id, :name %>
    <%= f.fields_for :category do |c| %>
      <%= c.label "Category" %>
      <%= c.text_field :name %><br>
    <% end %>



    <%= f.hidden_field :sandwich_id, value: @sandwich.id%>


    <%= f.submit "Create Sandwich" %>

<% end %>
