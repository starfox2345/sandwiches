<h1>Category form</h1>
<% if @category.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@category.errors.count, "error") %> prohibited this article from being saved:</h2>

    <ul>
      <% @category.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @category) do |f| %>

    <h3>Select an Existing Category:</h3>
      <%= f.label "Category" %>
      <%= f.text_field :name %><br>

    <%= f.fields_for :sandwiches do |s| %>
        <%= s.label :ingredient %>
        <%= s.text_field :ingredient %><br>
        <%= s.label :price %>
        <%= s.number_field :price, step: 0.25 %><br>
    <% end %>


    <%= f.fields_for :order do |o| %>
      <%= o.label "delivery?" %>
      <%= o.check_box :delivery %><br>
    <% end %>

    <%= f.submit %>
<% end %>